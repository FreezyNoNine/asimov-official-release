<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Page accueil</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons Fortnite -->
    <link href="../assets/img/favicon.png" rel="icon">
    <link href="../assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
        rel="stylesheet">

    <!-- Fichier CSS Vendor -->
    <link href="../assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="../assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="../assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="../assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="../assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="../assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="../assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="../assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- CSS Main -->
    <link href="../assets/css/moyenne.css" rel="stylesheet">
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">

            <h1 class="logo me-auto"><a href="/accueil"><span>Asim</span>ov</a></h1>

            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <% if (user) { %>
                        <form action="/deconnexion" method="POST">
                            <button type="submit">Déconnexion</button>
                        </form>
                        <% } else { %>
                            <a href="/connexion">Connexion</a>
                            <% } %>

                                <li class="dropdown"><a href="#" class="active"><span>Stage</span> <i
                                            class="bi bi-chevron-down"></i></a>
                                    <ul>
                                        <li><a href="/statusStage" class="active">Status stage</a></li>
                                        <li><a href="/convStage">Remplir convention stage</a></li>
                                        <li><a href="testimonials.html">Déposer attestation de stage</a></li>
                                    </ul>
                                </li>

                                <li><a href="/eleve">Vos Notes</a></li>
                                <li><a href="pricing.html">Professeur référent</a></li>
                                <li><a href="blog.html">Elève référent</a></li>
                                <li><a href="/contact">Contact</a></li>
                                <li><a href="/savoir_plus">En savoir plus</a></li>

                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><br><br><br>
    <!-- End Header -->
    <table id="moyenneTable" style="margin-top: 3rem;">
        <thead>
            <!-- Entêtes de colonnes -->
        </thead>
        <tbody>
            <% stages.forEach(function(stage) { %>
                <tr>
                <tr>
                    <th>Nom de l'entreprise</th>
                    <th>Contact</th>
                    <th>Nombre de lettre envoyé</th>
                    <th>Nombre de lettre reçu</th>
                    <th>Date de l'entretien</th>
                    <th>Résultat</th>
                    <th>id élève</th>
                </tr>

                <!-- Affichage des données avec des inputs pour la modification -->
                <form action="/modifierConvention/<%= stage.id %>" method="POST">

                    <td>
                        <%= stage.nomEntreprise %><input type="text" name="nom_entreprise"
                                value="<%= stage.nomEntreprise %>">
                    </td>
                    <td>
                        <%= stage.contactEntreprise %><input type="text" name="contact"
                                value="<%= stage.contactEntreprise %>">
                    </td>
                    <td>
                        <%= stage.nbLettreEnvoye %><input type="number" name="lettres_envoyees"
                                value="<%= stage.nbLettreEnvoye %>">
                    </td>
                    <td>
                        <%= stage.nbLettreRecu %><input type="number" name="lettres_recues"
                                value="<%= stage.nbLettreRecu %>">
                    </td>
                    <td>
                        <%= stage.dateEntretien %><input type="date" name="date_entretien"
                                value="<%= stage.dateEntretien %>">
                    </td>
                    <td>
                        <%= stage.resultat %>
                            <label><input type="radio" name="resultat" value="1" <% if (stage.resultat===1) { %>checked
                                <% } %>>Accepté</label>
                            <label><input type="radio" name="resultat" value="0" <% if (stage.resultat===0) { %>checked
                                <% } %>>Refusé</label>
                    </td>
                    <td>
                        <%= stage.id_utilisateur %><input type="number" name="id_utilisateur"
                                value="<%= stage.id_utilisateur %>">
                    </td>
                    <td>
                        <a href="/supprimerConvention/<%= stage.id %>" class="supprimerBtn">Supprimer</a>
                        <button type="submit">Modifier</button>
                    </td>
                </form>
                </tr>
                <% }); %>
        </tbody>
    </table>


</body>

</html>